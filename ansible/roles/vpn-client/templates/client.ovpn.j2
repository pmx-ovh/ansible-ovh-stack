client
dev tun
proto udp
remote {{ vpn_server_address | default('vpn.server.local') }} {{ vpn_server_port | default(1194) }}
resolv-retry infinite
nobind
persist-key
persist-tun
remote-cert-tls server
cipher AES-256-CBC
auth SHA256
verb 3

<ca>
{{ lookup('file', '/etc/openvpn/ca.crt') }}
</ca>

<cert>
{{ lookup('file', '/etc/openvpn/' + vpn_client_name + '.crt') }}
</cert>

<key>
{{ lookup('file', '/etc/openvpn/' + vpn_client_name + '.key') }}
</key>
