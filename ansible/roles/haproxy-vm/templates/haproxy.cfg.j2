# roles/haproxy-vm/templates/haproxy.cfg.j2
# Configuration HAProxy pour distribuer le trafic HTTP/HTTPS vers Traefik sur Services VM

global
    log /dev/log local0
    log /dev/log local1 notice
    daemon
    maxconn 2000
    tune.ssl.default-dh-param 2048

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000ms
    timeout client  50000ms
    timeout server  50000ms
    option forwardfor

frontend http-in
    bind *:80
    default_backend services-backend

frontend https-in
    bind *:443 ssl crt /etc/ssl/certs/haproxy.pem
    default_backend services-backend

backend services-backend
    balance roundrobin
    option http-server-close
    option forwardfor
    {% for host in groups['services'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:80 check
    {% endfor %}
