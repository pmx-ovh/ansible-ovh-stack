# Interfaces r√©seau Proxmox

auto lo
iface lo inet loopback

auto {{ proxmox_bridge_wan }}
iface {{ proxmox_bridge_wan }} inet static
    address {{ ovh_ip }}
    netmask {{ ovh_netmask }}
    gateway {{ ovh_gateway }}
    bridge_ports eth0
    bridge_stp off
    bridge_fd 0

auto {{ proxmox_bridge_lan }}
iface {{ proxmox_bridge_lan }} inet static
    address {{ lan_gateway }}
    netmask 255.255.255.0
    bridge_ports none
    bridge_stp off
    bridge_fd 0
