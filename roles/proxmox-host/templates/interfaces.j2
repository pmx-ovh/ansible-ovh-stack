# === Bridge privé entre Proxmox et OPNsense (WAN privé OPNsense) ===
auto {{ opnsense_wan_bridge }}
iface {{ opnsense_wan_bridge }} inet static
address {{ proxmox_wan_bridge_ip }}/24
bridge_ports none
bridge_stp off
bridge_fd 0


# === Bridge LAN interne derrière OPNsense ===
auto {{ lan_bridge }}
iface {{ lan_bridge }} inet manual
bridge_ports none
bridge_stp off
bridge_fd 0